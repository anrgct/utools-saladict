  "bugs": {
    "url": "https://github.com/crimx/webextensions-emulator/issues"
  },
  "homepage": "https://github.com/crimx/webextensions-emulator#readme",
  "devDependencies": {
    "cross-env": "^5.2.0",
    "eslint": "^5.12.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  },
