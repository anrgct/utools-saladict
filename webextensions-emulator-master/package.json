{
  "name": "webextensions-emulator",
  "version": "1.2.4",
  "description": "Functional fake WebExtensions environment for development.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crimx/webextensions-emulator.git"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --watch-poll --mode=development",
    "build": "cross-env NODE_ENV=production webpack --mode=production",
    "watch": "cross-env NODE_ENV=development webpack --watch"
  },
  "keywords": [
    "webextension",
    "extension",
    "chrome",
    "firefox",
    "fake",
    "environment",
    "api"
  ],
  "author": "CRIMX",
